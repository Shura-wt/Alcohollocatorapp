# Domaine utilisé pour accéder à l'app (doit pointer en A/AAAA vers l'IP publique du serveur)
APP_DOMAIN=pocket.0shura.fr

# Adresse email pour l'inscription ACME/Let's Encrypt (notifications de renouvellement)
ACME_EMAIL=mathisbatailler30@gmail.com

# Logs applicatifs (contrôlés par Vite)
# Active les logs en production si "true" (par défaut: true en dev, false en prod)
VITE_ENABLE_LOGS=false
# Niveau de logs: error | warn | info | debug (par défaut: debug en dev, info en prod)
VITE_LOG_LEVEL=info

# Limitation de débit Overpass (éviter les timeouts dus à des rafales de requêtes)
# Intervalle minimum entre deux requêtes (ms)
VITE_OVERPASS_MIN_INTERVAL_MS=2000
# Fenêtre glissante d'observation (ms)
VITE_OVERPASS_WINDOW_MS=10000
# Nombre maximal de requêtes autorisées dans la fenêtre
VITE_OVERPASS_MAX_REQUESTS_PER_WINDOW=3
# Backoff de base en cas d'erreur 429 (ms)
VITE_OVERPASS_429_BACKOFF_BASE_MS=800
